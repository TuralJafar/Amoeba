@model List<Person> 
<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Create Employee</h4>
                  <div class=""><a asp-controller="service" asp-action="create" class="btn btn-success">Create Employee</a></div>
                  <p class="card-description">
                    Add class <code>.table-striped</code>
                  </p>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            Image
                          </th>
                          <th>
                            Name
                          </th>
                          
                          <th>
                            Amount
                          </th>
                          
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (Person person in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/img/team/@person.Image" alt="image" />
                                </td>
                                <td>
                                    @person.Name
                                </td>
                                
                                <td>
                                   @person.Description
                                </td>
                                <td>
                                    <a asp-action="update" asp-controller="service" asp-route-id="@person.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i> </a>
                                    <a asp-action="delete" asp-controller="service" asp-route-id="@person.Id" class="btn btn-warning"><i class="mdi mdi-delete"></i> </a>
                                </td>
                              


                           
                                
                            </tr>
                        }
                      

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>